{
  "compilerOptions": {
    "declaration": true,
    "target": "es2022",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["esnext"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "types": ["node", "jest"],
    "noEmit": true
  },
  "include": ["src"]
}
